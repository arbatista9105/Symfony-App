{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row h-20 justify-content-center align-items-center">
            <div class="col-3 rounded my-5 p-2  bg-light text-dark">
                    <h2>Bienvenido</h2>
                    <div class=" container my-3 ">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                    </div>
                    <form action="{{ path('login') }}" method="post">

                        <div class="mb-2">
                            <label class="form-label" for="username">Correo:</label>
                            <input class="form-control" type="text" id="username" name="_username" required/>
                        </div>

                        <div class="mb-2">
                            <label class="form-label" for="password">Contrase√±a:</label>
                            <input  class="form-control" type="password" id="password" name="_password" required/>
                        </div>

                        {# If you want to control the URL the user is redirected to on success #}
                        <input type="hidden" name="_target_path" value="/"/>

                        <button type="submit" class="btn btn-primary" >Acceder</button>

                        <a href="register">Registrar</a>
                    </form>
            </div>
        </div>
    </div>

{% endblock %}
