{% extends 'base.html.twig' %}

{% block title %}Asignar Empresa{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a id="perfil" class="nav-link " aria-current="page" href="{{ path('app_perfil') }}">Perfil</a>
                    </li>
                    <li class="nav-item">
                        <a id="asignar_banco" class="nav-link " aria-current="page" href="{{ path('app_asignar_banco_index')  }}">Asignar Banco</a>
                    </li>
                    <li class="nav-item">
                        <a id="asignar_empresa" class="nav-link active" aria-current="page" href="{{ path('app_asignar_empresa_index')  }}">Asignar Empresa</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <h1>Usuario</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Empresa</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for user in paginator %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.empresa}}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_empresa_asignar', {'id': user.id}) }}">Asignar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">No hay registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    <nav>
        {#<ul class="pagination justify-content-center">#}
        {#<h7>Total de elementos:</h7>#}
        {#{{ paginator.getTotalItemCount }}#}
        {#</ul>#}
        <ul class="pagination justify-content-center">
            {{ knp_pagination_render(paginator) }}
        </ul>
    </nav>
{% endblock %}
